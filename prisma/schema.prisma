datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id        Int        @id @default(autoincrement())
  name      String
  cnpj      String
  quotes    Quote[]
  projects  Project[]
  contracts Contract[]


}

model Quote {
  id              Int              @id @default(autoincrement())
  client_id       Int
  ref_id          Int
  name            String
  estimated_cost  Int
  start_date      DateTime
  status          String
  quote_materials Quote_Material[]
  Client          Client?          @relation(fields: [clientId], references: [id])
  clientId        Int?



  @@index([clientId])
}

model Project {
  id                Int                @id @default(autoincrement())
  client_id         Int
  ref_id            Int
  name              String
  start_date        DateTime
  end_date          DateTime
  status            String
  project_materials Project_Material[]
  Client            Client?            @relation(fields: [clientId], references: [id])
  clientId          Int?

  @@index([clientId])
}

model Contract {
  id             Int      @id @default(autoincrement())
  client_id      Int
  project_id     Int
  quote_id       Int
  ref_id         Int
  name           String
  contract_value Int
  start_date     DateTime
  end_date       DateTime
  status         String
  Client         Client?  @relation(fields: [clientId], references: [id])
  clientId       Int?

  @@index([clientId])
}

model Material {
  id                Int                @id @default(autoincrement())
  name              String
  description       String
  unit              String
  category          String
  prices            Price[]
  quote_materials   Quote_Material[]
  project_materials Project_Material[]
}

model Supplier {
  id           Int     @id @default(autoincrement())
  name         String
  contact_info String
  prices       Price[]
}

model Price {
  id                Int                @id @default(autoincrement())
  material_id       Int
  supplier_id       Int
  price             Decimal
  effective_date    DateTime
  quote_materials   Quote_Material[]
  project_materials Project_Material[]
  Material          Material?          @relation(fields: [materialId], references: [id])
  materialId        Int?
  Supplier          Supplier?          @relation(fields: [supplierId], references: [id])
  supplierId        Int?

  @@index([materialId])
  @@index([supplierId])
}

model Quote_Material {
  quote_id    Int
  material_id Int
  quantity    Int
  price_id    Int
  Quote       Quote?    @relation(fields: [quoteId], references: [id])
  quoteId     Int?
  Material    Material? @relation(fields: [materialId], references: [id])
  materialId  Int?
  Price       Price?    @relation(fields: [priceId], references: [id])
  priceId     Int?

  @@unique([quote_id, material_id])
  @@index([quoteId])
  @@index([materialId])
  @@index([priceId])
}

model Project_Material {
  project_id  Int
  material_id Int
  quantity    Int
  price_id    Int
  Project     Project?  @relation(fields: [projectId], references: [id])
  projectId   Int?
  Material    Material? @relation(fields: [materialId], references: [id])
  materialId  Int?
  Price       Price?    @relation(fields: [priceId], references: [id])
  priceId     Int?

  @@unique([project_id, material_id])
  @@index([projectId])
  @@index([materialId])
  @@index([priceId])
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}
